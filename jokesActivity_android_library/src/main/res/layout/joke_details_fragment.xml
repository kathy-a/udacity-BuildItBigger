<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/jokedetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ui.jokedetails.JokeDetailsFragment">

    <Button
        android:id="@+id/button_randomJoke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="getRandomJoke"
        android:text="@string/getRandomJoke"
        tools:ignore="OnClick"
        android:layout_margin="@dimen/activity_extra_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text_joke"
        style="@style/Heading1"
        android:gravity="center_horizontal"
        android:text="JokeDetailsFragment"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
